{
  "extends": "astro/tsconfigs/strict",
  "include": [
    ".astro/types.d.ts",
    "**/*"
  ],
  "exclude": [
    "dist"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@components/*": ["src/components/*"],
      "@pocs/*": ["src/pocs/*"],
      "@types/*": ["src/types/*"],
      "@utils/*": ["src/utils/*"],
    },
    "jsx": "react-jsx",
    "jsxImportSource": "react"
  }
}